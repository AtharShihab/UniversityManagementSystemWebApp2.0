@model IEnumerable<UniversityManagementSystemWebApp2._0.Models.Teacher>
@{
    ViewBag.Title = "View all Teacher";
}

<h2>View all Teacher</h2>

<p>@Html.ActionLink("New Teacher", "New", "Teachers", new { @class="btn btn-primary" })</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact No.</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Email</td>
                <td>@teacher.ContactNo</td>
                <td>@teacher.Department.Code</td>
            </tr>
        }
    </tbody>
</table>

